<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mvp_demo.MVPDemoActivity">

    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tvResult" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnQuery" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="成都"
            android:hint="在此输入要查询的城市"
            android:ems="10"
            android:id="@+id/etCity" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="查询天气"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnQuery" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etCity" app:layout_constraintEnd_toEndOf="@+id/etCity"
            app:layout_constraintStart_toStartOf="@+id/etCity"/>
</androidx.constraintlayout.widget.ConstraintLayout>